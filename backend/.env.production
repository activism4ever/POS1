# Production Environment Configuration
# Copy this file to .env and configure for your production environment

# Production Environment Variables for Heroku
# These will be set in Heroku dashboard

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Database Configuration
DB_TYPE=postgres
# DATABASE_URL will be automatically provided by Heroku PostgreSQL addon

# Connection Pool Settings (optimized for Heroku)
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# CORS Settings (update with your Netlify domain)
ALLOWED_ORIGINS=https://your-app.netlify.app,http://localhost:3000

# Security Settings
BCRYPT_ROUNDS=14

# SSL Configuration (if using SSL)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Application Settings
HOSPITAL_NAME=Your Hospital Name
HOSPITAL_ADDRESS=Your Hospital Address
CURRENCY_SYMBOL=â‚¦
TIMEZONE=Africa/Lagos

# Logging
LOG_LEVEL=warn
DEBUG=false

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30